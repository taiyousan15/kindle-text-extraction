# ==================== Application ====================
ENVIRONMENT=development  # development, staging, production

# ==================== Database ====================
DATABASE_URL=postgresql://kindle_user:CHANGE_THIS_PASSWORD@localhost:5432/kindle_ocr

# ==================== Redis ====================
REDIS_URL=redis://localhost:6379/0
RATE_LIMIT_STORAGE_URL=redis://localhost:6379/1

# ==================== Security ====================
# üîê CRITICAL: Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
# NEVER use default values in production!
SECRET_KEY=CHANGE_THIS_TO_RANDOM_STRING_32_CHARS_OR_MORE
JWT_SECRET_KEY=CHANGE_THIS_TO_RANDOM_STRING_32_CHARS_OR_MORE
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ==================== Authentication ====================
# ‚ö†Ô∏è Set to false ONLY for local personal use (NOT for production)
AUTH_ENABLED=true

# ==================== CORS ====================
# Comma-separated list of allowed origins
ALLOWED_ORIGINS=http://localhost:8501,http://localhost:3000,http://localhost:8000

# ==================== Rate Limiting ====================
RATE_LIMIT_ENABLED=true

# ==================== API Keys ====================
ANTHROPIC_API_KEY=sk-ant-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
OPENAI_API_KEY=sk-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# ==================== Amazon Credentials ====================
# üîê SECURITY WARNING: Use dedicated Amazon account with minimal permissions
# Consider using AWS Secrets Manager for production
AMAZON_EMAIL=your-email@example.com
AMAZON_PASSWORD=your-secure-password

# ==================== GitHub (for deployment) ====================
GITHUB_TOKEN=ghp_xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
REPOSITORY=taiyousan15/kindle-text-extraction

# ==================== Optional ====================
DEVICE_IDENTIFIER=MacBook Pro 16-inch
AI_GUIDES_API_URL=http://localhost:8888
MONTHLY_TOKEN_CAP=10000000
RELEARN_CRON=0 3 * * *
TIMEZONE=Asia/Tokyo
TESSDATA_PREFIX=/usr/share/tesseract-ocr/4.00/tessdata

# ==================== Production Only ====================
# Uncomment and configure for production deployment
# SENTRY_DSN=https://xxxxx@sentry.io/xxxxx
# LOG_LEVEL=INFO
# MAX_WORKERS=4
